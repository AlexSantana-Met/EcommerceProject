
@{
    ViewBag.Title = "Ingresar";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="breadcrumbs">
    <ul>
        <li>@Html.ActionLink("Inicio", "Index", "Home") / </li>
        <li>Iniciar Sesión</li>
    </ul>
</div>
<div class="login-page">
    <h2>Ingresar a la tienda</h2>
    <br />
    <div class="row" style="text-align: left;">
        <div class="col-md-6 col-md-offset-3">
            <div class="block mb-4">
                <div class="block-inside">
                    <form action="#" accept-charset="UTF-8" method="post" id="login">
                        <div id="credentials">
                            <div class="form-group">
                                <div id="credentials_email" class="field">
                                    <label for="customer_credentials_email" class="control-label">Correo</label>
                                    <input type="email" name="customer[email]" id="customer_email" class="text form-control" required="required">
                                </div>
                            </div>
                            <div class="form-group">
                                <div id="credentials_password" class="field">
                                    <label for="customer_credentials_password" class="control-label">Contraseña</label>
                                    <input type="password" name="customer[password]" id="customer_password" class="text form-control" required="required">
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-md-4 col-md-offset-4">
                                    <input type="submit" value="Iniciar Sesión" class="button btn btn-block btn-success" id="submit_login">
                                </div>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
            <div class="block text-center">
                <h3>¿Eres nuevo en ecommerce?</h3>
                <div class="block-inside">
                    <p>Registrate en nuestro sitio web para que puedas acceder a todos los beneficios que te ofrece esta nueva tienda online</p>
                    <div class="row">
                        <div class="col-md-4 col-md-offset-4">
                            @*@Html.ActionLink("Únete", "Registrar", "Registro")*@
                            <a href="/Registro/Registrar" class="btn btn-block btn-success" style="font-size:1.5rem;" title="Registrarse como Cliente">
                                Únete
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

